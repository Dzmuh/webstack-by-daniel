@{
    ViewBag.Title = "Index";
}
@model IEnumerable<cohort.BrokenLink>

<h2>Broken Links</h2>

<table>
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: settings">
        <tr>
            <td data-bind="text: key"></td>
            <td data-bind="text: value"></td>
        </tr>
    </tbody>
</table>


@section Scripts
{
    <script type="text/javascript">
        $(function () {
            function update() {
                $.getJSON('/api/configuration', function (data) {
                    var viewModel = ko.mapping.fromJS(data);
                    ko.applyBindings(viewModel);
                });
            }
            update();
        });
    </script>
}